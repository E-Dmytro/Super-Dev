<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title=" " Height="100" Width="250" ShowInTaskbar="False" Topmost="True"
 WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center">
	<StackPanel
		Width="200"
		Height="100">
		<TextBlock
			Text="Друкувати у кольорі?"
			Width="200"
			Height="16"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			TextAlignment="Center" />
		<StackPanel
			Width="200"
			Height="50"
			Orientation="Horizontal"
			FlowDirection="LeftToRight"
			HorizontalAlignment="Center">
			<Button
				Content="Так"
				Width="75"
				Height="23"
				Click = "ok_click"
				Margin="15,0,20,0" />
			<Button
				Content="Ні"
				Width="75"
				Click = "no_click"
				Height="23" />
		</StackPanel>
	</StackPanel>
</Window>