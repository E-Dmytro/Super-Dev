<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello World"
        Width ="350" ResizeMode="NoResize" SizeToContent="Height">
    <StackPanel Margin="10" >
        <Label Content="Enter Your Name Inside the Box Below"  Margin="0,0,0,10"/>
        <TextBox x:Name="textbox" Height="46" FontSize="16" FontWeight="Heavy" VerticalContentAlignment="Center" Padding="10,0,10,0"/>
        <Button Content="Say Hello" Height="64" Margin="0,10,0,0" Background="#FF53A3ED" Click="say_hello"/>
    </StackPanel>

</Window>